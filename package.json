{
  "name": "traylinx-auth-client",
  "version": "1.0.1",
  "description": "Enterprise-grade authentication client with Agent-to-Agent (A2A) Protocol support for Traylinx Sentinel API and agent-to-agent communication",
  "main": "src/index.js",
  "scripts": {
    "test": "jest"
  },
  "jest": {
    "testEnvironment": "node",
    "clearMocks": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/**/*.spec.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "text-summary",
      "html",
      "lcov"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js"
    ],
    "verbose": true,
    "transformIgnorePatterns": [
      "node_modules/(?!(uuid)/)"
    ]
  },
  "keywords": [
    "traylinx",
    "authentication",
    "a2a",
    "agent2agent",
    "google-a2a",
    "sentinel",
    "oauth2",
    "jwt",
    "agent",
    "microservices",
    "api-client",
    "enterprise"
  ],
  "author": "Traylinx <dev@traylinx.com>",
  "license": "MIT",
  "homepage": "https://github.com/traylinx/traylinx-auth-client-js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/traylinx/traylinx-auth-client-js.git"
  },
  "files": [
    "src/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    "SECURITY.md",
    "CONTRIBUTING.md"
  ],
  "dependencies": {
    "axios": "^1.12.0",
    "joi": "^17.13.3",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "axios-mock-adapter": "^2.1.0",
    "express": "^5.1.0",
    "jest": "^30.1.3",
    "supertest": "^7.1.4"
  }
}
